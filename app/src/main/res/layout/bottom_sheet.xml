<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:background="@android:color/black"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <com.devadvance.circularseekbar.CircularSeekBar
        android:id="@+id/circularSeekBar2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:circle_x_radius="100dp"
        app:circle_y_radius="100dp"
        app:end_angle="270"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:max="100"
        app:pointer_alpha_ontouch="100"
        app:pointer_color="#0174DF"
        app:pointer_halo_color="#880174DF"
        app:progress="25"
        app:start_angle="270"
        app:use_custom_radii="true" />

    <com.devadvance.circularseekbar.CircularSeekBar
        android:id="@+id/circularSeekBar3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="8dp"
        app:circle_x_radius="100dp"
        app:circle_y_radius="100dp"
        app:end_angle="270"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:max="100"
        app:pointer_alpha_ontouch="100"
        app:pointer_color="#0174DF"
        app:circle_progress_color="@color/colorAccent"
        app:pointer_halo_color="#880174DF"
        app:progress="25"
        app:start_angle="270"
        app:use_custom_radii="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Подсветка на кухне"
        android:textColor="#EEE4E4"
        app:layout_constraintBottom_toTopOf="@+id/circularSeekBar2"
        app:layout_constraintEnd_toEndOf="@+id/circularSeekBar2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/circularSeekBar2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Вытяжка"
        android:textColor="#EEE4E4"
        app:layout_constraintBottom_toTopOf="@+id/circularSeekBar3"
        app:layout_constraintEnd_toEndOf="@+id/circularSeekBar3"
        app:layout_constraintStart_toStartOf="@+id/circularSeekBar3" />

    <com.suke.widget.SwitchButton
        android:id="@+id/switch_button1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circularSeekBar2"
        app:layout_constraintTop_toTopOf="parent" />

    <com.suke.widget.SwitchButton
        android:id="@+id/switch_button2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/switch_button1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.suke.widget.SwitchButton
        android:id="@+id/switch_button3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/switch_button4"
        app:layout_constraintTop_toTopOf="parent" />

    <com.suke.widget.SwitchButton
        android:id="@+id/switch_button4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/circularSeekBar3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Свет"
        android:textColor="#EEE4E4"
        app:layout_constraintBottom_toTopOf="@+id/switch_button1"
        app:layout_constraintEnd_toEndOf="@+id/switch_button1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/switch_button1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Жалюзи"
        android:textColor="#EEE4E4"
        app:layout_constraintBottom_toTopOf="@+id/switch_button2"
        app:layout_constraintEnd_toEndOf="@+id/switch_button2"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="@+id/switch_button2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Чайник"
        android:textColor="#EEE4E4"
        app:layout_constraintBottom_toTopOf="@+id/switch_button3"
        app:layout_constraintEnd_toEndOf="@+id/switch_button3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/switch_button3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ретротоп"
        android:textColor="#EEE4E4"
        app:layout_constraintBottom_toTopOf="@+id/switch_button4"
        app:layout_constraintEnd_toEndOf="@+id/switch_button4"
        app:layout_constraintStart_toStartOf="@+id/switch_button4" />

</android.support.constraint.ConstraintLayout>